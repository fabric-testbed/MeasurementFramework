[server]
domain = {{ hostname }}
#root_url = https://%(domain)s
# version if using grafana as root 
root_url = https://%(domain)s/grafana

[security]
# For getting graphs into jupyter notebook
allow_embedding = true


[auth.anonymous]
enabled = true

[auth.basic]
enabled = false


[rendering]
server_url = http://{{ install_name }}_grafana_renderer:8081/render
callback_url = http://{{ install_name }}_grafana:3000/
# Hard coded token OK here since this is only used between 2 docker containers without outside exposure
